<UserControl x:Class="ZLearning_Desktop.TextMessageFriend"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZLearning_Desktop"
             HorizontalAlignment="Left"
             VerticalAlignment="Bottom"
             Loaded="UserControl_Loaded"
             mc:Ignorable="d">
    <Grid MinWidth="100" MinHeight="30" MaxWidth="500" Width="auto" Height="auto" Margin="10 3 10 3">
        <Border Background="#182533" CornerRadius="20 10 10 0">
            <Grid>
                <StackPanel Margin="20 5 50 20" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <TextBlock x:Name="usernameTxt" Text="Name" FontSize="15" Foreground="#74C278"/>
                    <TextBlock x:Name="textMessageFriendTxt" Text="Message asd swef erg erg erg erg"  TextWrapping="Wrap" HorizontalAlignment="Left" Foreground="Snow"/>
                </StackPanel>
                
                <TextBlock x:Name="textMessageFriendTime" Text="21:00" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0 0 10 5" Foreground="#92CAF4"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
